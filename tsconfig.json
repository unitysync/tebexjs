{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleDetection": "force",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"moduleResolution": "node",
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowJs": true,
		"checkJs": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
